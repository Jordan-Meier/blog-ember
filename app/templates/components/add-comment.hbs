{{#if addNewComment}}
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>


    <div class="form-group">
      <label for="body">Body</label>
      {{textarea rows="8" cols="40" value=body id="body" class="form-control"}}
    </div>


    <button {{action 'saveComment'}}>Add New Comment</button>

  </form>
</div>
{{else}}
  <button class="btn-lg btn-primary" {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
