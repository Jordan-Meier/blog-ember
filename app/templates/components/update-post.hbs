{{#if updatePostForm}}
  <div>
    <form>
      <div class="form-group">
        <label for="title">Title</label>
        {{input value=title id="title" placeholder=post.title}}
      </div>

      <div class="form-group">
        <label for="category">Category</label>
        {{input value=category id="category" placeholder=post.category}}
      </div>

      <div class="form-group">
        <label for="body">Body</label>
        {{textarea rows="8" cols="40" value=body id="body" placeholder=post.body}}
      </div>

      <div class="form-group">
        <label for="image">Image URL</label>
        {{input value=image id="image" placeholder=post.image}}
      </div>

      <button {{action 'updatePost' post}}>Edit</button>

    </form>
  </div>
{{else}}
  <button {{action 'updatePostForm'}}>Edit Post</button>
{{/if}}
